\edef\luatexko@family@default{\familydefault}
\def\luatexko@global@setfonts#1#2#3#4{%
  \expandafter\newfontfamily\csname #1#2@font\expandafter\endcsname
    \luatexko@fontspec@temp{#4}%
  \ifx\luatexko@family@default#3%
    \expandafter\let\csname #2@font\expandafter\endcsname
      \csname #1#2@font\endcsname
    \csname luatexko@#2@selectfont\endcsname
  \fi\ignorespaces
}
